<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >
 
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titre de l'article"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15sp"
        android:textStyle="bold"/>
 
    <TextView
        android:id="@+id/tvNbLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tvTitle"
        android:layout_marginRight="5dip"
        android:gravity="right"
        android:text="0"
        android:textColor="#10bcc9"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvLikes"
        android:layout_alignBottom="@+id/tvLikes"
        android:layout_toLeftOf="@+id/tvNbLikes"
        android:gravity="right"
        android:text="@string/like_text"
        android:textColor="#10bcc9"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvDate"
        android:text="Article ..."
        android:textColor="#343434"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_toRightOf="@+id/tvPosted"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvTitle"
        android:text="Date ..."
        android:textColor="#343434"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvPosted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvTitle"
        android:text="@string/list_posted"
        android:textColor="#343434"
        android:textSize="10sp" />
 
</RelativeLayout>