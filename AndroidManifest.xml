<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.polytech.resmob.vde"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fr.polytech.resmob.vde.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TabListActivity" android:label="@string/act_tablist_name"></activity>
        <activity android:name=".OneTabActivity" android:label="@string/act_tablist_name"></activity>
        <activity android:name=".PostActivity" android:label="@string/act_post_name"></activity>
        <activity android:name=".PreferencesActivity" android:label="@string/act_pref_name"></activity>
    </application>

</manifest>